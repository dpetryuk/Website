{
    "homepage": "https://dpetryuk.github.io",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "classnames": "^2.2.6",
        "immer": "^8.0.1",
        "lodash": "^4.17.11",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-redux": "^7.0.3",
        "react-scripts": "^3.0.0",
        "react-typist": "^2.0.5",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0",
        "storybook": "^5.1.11",
        "styled-components": "^4.4.0",
        "stylelint-config-recommended-scss": "^3.3.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --verbose --env=jsdom",
        "test:cover": "CI=true npm test --coverage --watchAll",
        "eject": "react-scripts eject",
        "lint:js": "eslint ./src/app/**",
        "lint:css": "stylelint './src/**/*.jsx'",
        "lint:todo": "fixme './src/**/*.{js,jsx}'",
        "lint": "npm-run-all lint:todo lint:css lint:js",
        "lint:js:fix": "eslint ./src/** --fix",
        "lint:css:fix": "npm run lint:css -- --fix",
        "lint:fix": "npm-run-all lint:css:fix lint:js:fix",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "@storybook/addon-actions": "^5.0.9",
        "@storybook/addon-knobs": "^5.0.10",
        "@storybook/addon-links": "^5.0.9",
        "@storybook/addons": "^5.0.9",
        "@storybook/react": "^5.2.1",
        "babel-core": "^7.0.0-bridge.0",
        "babel-loader": "^8.0.5",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-styled-components": "^1.10.6",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-react-app": "^8.0.0",
        "check-node-version": "^3.3.0",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.12.1",
        "eslint": "^5.16.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^4.1.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "fixme": "^0.5.0",
        "http-proxy-middleware": "^0.19.1",
        "husky": "^1.3.1",
        "jest-enzyme": "^7.0.0",
        "lint-staged": "^8.1.5",
        "lodash-webpack-plugin": "0.11.5",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.14.3",
        "redux-logger": "^3.0.6",
        "redux-mock-store": "^1.5.3",
        "stylelint": "^10.0.1",
        "stylelint-config-recommended": "^2.2.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-order": "^3.0.0",
        "stylelint-processor-styled-components": "^1.7.0",
        "stylelint-scss": "^3.8.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}",
            "!src/**/index.{js,jsx}",
            "!src/**/*.stories.jsx",
            "!src/setup*.js",
            "!.storybook/**/*.{js,jsx}"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "eslint",
            "stylelint",
            "fixme",
            "git add"
        ]
    }
}
